<style>
.cv-content {
  padding-top: 0.5em;
}

.astro-accordion {
  --accordion-border: var(--color-border);
  --accordion-title-color: var(--brand-neutral);
  --accordion-bg: transparent;
  --accordion-radius: var(--radius-md);
  box-shadow: none;
}

.astro-accordion .accordion-item {
  border-bottom: 1px solid var(--color-border);
  background: transparent;
  margin-bottom: var(--spacing-sm);
  transition: transform 0.2s ease;
}

.astro-accordion .accordion-item:hover {
  transform: translateY(-2px);
}

.astro-accordion .accordion-title {
  font-family: var(--font-primary);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-normal);
  color: var(--brand-neutral);
  background: transparent;
  padding: var(--spacing-sm) 0;
  transition: color 0.2s ease;
  letter-spacing: -0.01em;
}

.astro-accordion .accordion-title:hover,
.astro-accordion .accordion-title:focus {
  color: var(--brand-sage);
  text-decoration: none;
}

.astro-accordion ul {
  padding-left: 1.25rem;
  margin-bottom: var(--spacing-sm);
}

.astro-accordion li {
  margin-bottom: var(--spacing-sm);
  font-size: var(--font-size-md);
  line-height: 1.7;
  font-family: var(--font-primary);
}

.astro-accordion strong {
  color: var(--brand-sage);
  font-weight: var(--font-weight-semibold);
}

.astro-accordion em {
  font-style: italic;
}

.astro-accordion a {
  color: var(--brand-coral);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-color 0.2s ease, color 0.2s ease;
}

.astro-accordion a:hover,
.astro-accordion a:focus {
  border-color: var(--brand-coral);
  color: #FF7A50;
}

@media (max-width: 900px) {
  .grid-2col {
    grid-template-columns: 1fr;
    gap: var(--spacing-md) 0;
  }
  
  .page-title {
    text-align: center;
  }
}
.cv-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.4rem;
  margin-bottom: 2.8rem;
}
.cv-photo {
  width: 260px;
  height: 320px;
  object-fit: cover;
  object-position: center top;
  border-radius: 1.2rem;
  box-shadow: 0 1px 12px 0 rgba(60,60,60,0.08);
  filter: grayscale(100%);
  opacity: 0.88;
  margin: 0;
  display: block;
  transition: filter 0.3s ease, opacity 0.3s ease;
}
.cv-photo:hover {
  filter: grayscale(0%);
  opacity: 1;
}

</style>
